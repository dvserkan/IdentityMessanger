@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Gönderme Sayfası</h4>
            <div class="table-responsive">
				<form class="form-group" method="post">
					@Html.Label("Alıcı Mail")

					@Html.DropDownListFor(x => x.Receiver, (List<SelectListItem>)@ViewBag.mail, "Kayıtlı Mail Adresi Seçiniz.", new { @class = "form-control", @required = "required" })

					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					<br />
					@Html.Label("Konu")
					@Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @required = "required" })
					<br />
					@Html.Label("Mesaj")
					@Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control" , @required = "required" })
					<br />
					<button class="btn btn-outline-primary">Gönder</button>
				</form>
            </div>
        </div>
    </div>
</div>



